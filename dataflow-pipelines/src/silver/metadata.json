{
  "name": "silver-gcs-to-bq-clean",
  "description": "Padroniza/limpa dados da RAW (GCS) e carrega em BigQuery (Trusted).",
  "parameters": [
    { "name": "input_path", "label": "Entrada GCS RAW", "helpText": "gs://<bucket-raw>/bronze/...", "isOptional": false, "regexes": ["^gs://.+"] },
    { "name": "output_bq_table", "label": "Tabela destino BQ", "helpText": "project.dataset.table", "isOptional": false, "regexes": ["^[a-z0-9_-]+\\.[a-z0-9_]+\\.[a-z0-9_]+$"] },
    { "name": "staging_location", "label": "Staging GCS", "helpText": "gs://<bucket-staging>/dataflow/staging", "isOptional": false, "regexes": ["^gs://.+"] },
    { "name": "temp_location", "label": "Temp GCS", "helpText": "gs://<bucket-temp>/dataflow/tmp", "isOptional": false, "regexes": ["^gs://.+"] },
    { "name": "use_runner_v2", "label": "Runner v2", "helpText": "Ativa Runner v2 (true/false).", "isOptional": true, "defaultValue": "true" }
  ]
}
